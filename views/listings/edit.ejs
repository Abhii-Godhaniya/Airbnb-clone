<% layout("/layouts/boilerplate.ejs") -%>

    <body>
        <div class="row mt-4">
            <div class="col-8 offset-2">
                <h1>Edit Listing</h1>
                <br>
                <form action="/listings/<%= listing._id %>?_method=PUT" method="POST">
                    <div class="mb-3">
                        <label for="title" class="form-label">Title</label>
                        <input type="text" name="title" class="form-control" value="<%= listing.title %>" />
                    </div>
                    <div class="mb-3">
                        <label for="description" class="form-label">Description</label>
                        <input type="text" name="title" class="form-control" value="<%= listing.title %>" />
                    </div>
                    <div class="mb-3">
                        <label for="image[url]" class="form-label">Image URL</label>
                        <input type="text" name="image[url]" class="form-control" value="<%= listing.image.url %>" />
                    </div>
                    <div class="row">
                        <div class="mb-3 col-md-4">
                        <label for="Price" class="form-label">Price</label>
                        <input type="number" name="price" class="form-control" value="<%= listing.price %>" />
                    </div>
                    <div class="mb-3 col-md-8">
                        <label for="location" class="form-label">Location</label>
                        <input type="text" name="location" class="form-control" value="<%= listing.location %>" />
                    </div>
                    </div>
                    <div class="mb-3">
                        <label for="country" class="form-label">Country</label>
                        <input type="text" name="country" class="form-control" value="<%= listing.country %>" />
                    </div>
                
                    <button class="btn btn-dark edit-btn mt-4">Update</button>
                </form>
            </div>
        </div>


    </body>